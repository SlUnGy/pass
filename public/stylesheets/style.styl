body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: inherit 
  text-decoration: none
*
  margin: 0px
  padding: 0px

.textfield
  border: blue 1px solid 
.button
  background-color: blue
  color: white
  border: blue 1px solid
  border-radius: 2px
.button:hover
  background-color: lightblue
  border-right: lightblue 1px solid
  border-bottom: lightblue 1px solid

#background
  margin-left: auto 
  margin-right: auto 
  background-color: lightgray
  border-radius: 5px
  box-shadow: 2px 2px #888;
  width: 33%
#content
  padding: 2%
#content form
  width: auto
#content form .textfield
  margin-top: 3px
#content form .button
  margin-top: 3px


#footer
  position: fixed
  border-top: lightgray 2px solid
  bottom: 0px
  width: 100%
#footer ul 
  display: inline
#footer ul li
  display: inline
  padding-right: 10px
  color: gray

#header
  padding-top: 2%
  padding-bottom: 2%
  padding-left: 25%
  padding-right: 25%
  text-align: center
#header h1
  color: orange
  font-size: 90px
#header p
  font-size: 35px
