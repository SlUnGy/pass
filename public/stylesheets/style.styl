body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  height: auto
a
  color: inherit 
  text-decoration: none
*
  margin: 0px
  padding: 0px

.textfield
  border: blue 1px solid 
  border-radius: 2px
  
.textfield:hover
  border-color: lightblue
  
.button
  background-color: blue
  color: white
  border: grey 1px solid
  border-radius: 2px
  
.button:hover
  background-color: lightblue
  border-right: lightblue 1px solid
  border-bottom: lightblue 1px solid

#menu
  left: -500px
  position: fixed
  background-color: grey
  border-bottom-right-radius: 7px
  border-top-right-radius: 7px
  border: black 1px solid
  width: 15%

#menu.active
  left: 1px !important
  transition-property: left
  transition-duration: 0.5s
  
#menu.inactive
  left: -500px
  transition-property: left
  transition-duration: 0.5s
#menu ul
  padding: 5px
  
#menu li
  padding: 5px
  
 
#menubutton.active
  border-radius: 15px
  opacity:1
  position: fixed
  
#menubutton:hover
  opacity: 0.5
  background-color: black
#menubutton.inactive
  display: none
  
#background
  margin-left: auto 
  margin-right: auto 
  background-color: lightgray
  border-radius: 5px
  box-shadow: 2px 2px #888
  margin-bottom: 2em

#background.original
  width: 28%
  height: 150px

#background.expand
  transition-property: width height
  transition-duration: 0.5s
  width: 90%
  height: 90%
  z-index:2

#content
  padding: 2%
#content.inactive
  opacity: 0
#content.active
  transition-property: opacity
  transition-timing-function: ease-in
  transition-duration: 0.5s
  opacity: 1
  
#heading
  margin-left: 40px
  font-size: 20px

#createForm
  float: center
  width: 500px

#createForm .textfield
  padding: 5px
  margin: 5px

#createForm .button
  padding: 5px
  margin: 5px

#content form#login
  margin-top: 2%
  margin-left: auto
  margin-right: auto
  width: 55%
  padding: 5px
  
#content form#login .textfield
  margin-top: 7px
  width: 100%
  
#content form#login .button
  margin-top: 7px
  width: 100%
  
.centertext
  margin-top: 5px
  margin-right: auto
  margin-left: auto
  width: 55%
  color: gray
  
  
#footer
  position:fixed
  border-top: lightgray 2px solid
  bottom: 0px
  width: 100%
  background: white

#footer ul 
  display: inline
#footer ul li
  display: inline
  padding-right: 10px
  color: gray

#header
  padding-top: 2%
  padding-bottom: 3%
  text-align: center
  width: 100%
#header h1
  color: orange
  font-size: 90px
#header p
  font-size: 35px
  
#indexButton
	display: table-cell
	vertical-align: middle
	height: 200px
	text-decoration: none
	width: 25%
	text-align: center
	font: 42px bold "Lucida Grande", Helvetica
	border-radius: 30px
	

#indexButton.green 
	background-color: #99ff00

#indexButton.blue
	background-color: #0099ff

#indexButton.red
	background-color: #ff9900

#indexButton.purple 
	background-color: #ff0099



