body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: inherit 
  text-decoration: none
*
  margin: 0px
  padding: 0px
.textfield
  border: blue 1px solid 
  border-radius: 2px
.textfield:hover
  border-color: lightblue
.button
  background-color: blue
  color: white
  border: blue 1px solid
  border-radius: 2px
.button:hover
  background-color: lightblue
  border-right: lightblue 1px solid
  border-bottom: lightblue 1px solid

#background
  margin-left: auto 
  margin-right: auto 
  background-color: lightgray
  border-radius: 5px
  box-shadow: 2px 2px #888;
  width: 28%
#content
  padding: 2%
#content form
  margin-top: 2%
  margin-left: auto
  margin-right: auto
  width: 75%
#content form .textfield
  margin-top: 7px
  width: 100%
#content form .button
  margin-top: 7px
  width: 100%
.centertext
  margin-top: 5px
  margin-right: auto
  margin-left: auto
  width: 75%
  color: gray

#footer
  position: fixed
  border-top: lightgray 2px solid
  bottom: 0px
  width: 100%
#footer ul 
  display: inline
#footer ul li
  display: inline
  padding-right: 10px
  color: gray

#header
  padding-top: 2%
  padding-bottom: 3%
  text-align: center
  width: 100%
#header h1
  color: orange
  font-size: 90px
#header p
  font-size: 35px
