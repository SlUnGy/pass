extends layout

block content
  script.
    function expand() {
      document.getElementById("background").className="expand";
      document.getElementById("content").className="active";
    }
    window.onload = function() { expand(); }
  
  div(id="background" class="original")
    
    div(id="content" class="inactive")
      form(action="/notworking", method="post")
        input(type="text", name="coursename", placeholder="Name", class="textfield") 
        br
        input(type="text", name="subject", placeholder="subject", class="textfield")
        br
        input(type="submit", value="Submit", class="button")