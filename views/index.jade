extends layout

block content
  script.
    window.onload = function() { setInactive("menubutton"); }
    
  form(action="/login", method="post", id="login")
    input(type="text", name="name", placeholder="Username", class="textfield") 
    br
    input(type="password", name="pw", placeholder="Passwort", class="textfield")
    br
    input(type="submit", value="Login", class="button")
    div(class="centertext"): a(href="hilfe") need help?
    div(class="centertext"): a(href="loginStudent") you're a student?
